<div class="flex flex-col flex-1 p-8 justify-between gap-12">
  <div class="flex items-center justify-center">
      <RoundCounter />
  </div>
  <div class="flex-1 flex items-center justify-center xl:max-w-[80%] mx-auto">
    <div class="flex-1 grid grid-cols-12 gap-12">
    <div class="flex justify-end col-span-6 lg:col-span-3 lg:order-1">
      <Player @player="X" />
    </div>

    <div class="flex col-span-6 lg:col-span-3 lg:order-3">
      <Player @player="O" />
    </div>

    <div class="col-span-12 lg:col-span-6 lg:order-2">
      <div class="flex-1 grid grid-cols-3 gap-4 aspect-square rounded-xl overflow-hidden outline-dashed outline-offset-[1rem] outline-red-800">
        {{#each this.tictacService.context.board as |player index|}}
          <Square @index={{index}} @player={{player}} />
        {{/each}}
      </div>
    </div>

    </div>
  </div>
  
  <div class="flex justify-center flex-col items-center space-y-2">
      <div>
        <Restart />
      </div>
      <div>
        <GameStatus />
      </div>
  </div>
</div>


